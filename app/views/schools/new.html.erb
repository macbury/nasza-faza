<h1>New school</h1>

<% form_for(@school) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :street, 'Ulica:' %><br />
    <%= f.text_field :street %>
  </p>
  <p>
    <%= f.label :locality, 'Miejscowość:' %><br />
    <%= f.text_field :locality %>
  </p>
	<p>
    <%= f.label :region, 'Województwo:' %><br />
    <%= f.select :region, WOJEWODZTWA %>
  </p>
  <p>
    <span class="button">
			<%= f.submit 'Dodaj!' %>
		</span>
  </p>
<% end %>

<%= link_to 'Back', schools_path %>